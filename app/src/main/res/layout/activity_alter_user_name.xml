<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/name_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_bar_bg_white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/name_return"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:padding="10dp"
            android:src="@drawable/button_left_arrow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="修改昵称"
            android:textColor="#555555"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/name_finsh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:padding="12dp"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:text="完成"
            android:textColor="#FF7F24" />

    </RelativeLayout>
    <com.team.azusa.yiyuan.widget.ClearEditText
        android:id="@+id/name_ET"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:padding="10dp"
        android:textSize="15sp"
        android:singleLine="true"
        android:textColorHint="#cccccc"
        android:hint="请输入昵称"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/name_title"
        android:background="@drawable/login_layoutshape"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/name_ET"
        android:layout_alignRight="@id/name_ET"
        android:layout_below="@id/name_ET"
        android:layout_marginTop="8.0dip"
        android:text="@string/tips_nickname"
        android:textColor="@color/signature_text"
        android:textSize="@dimen/setting_content_text"/>
</RelativeLayout>
