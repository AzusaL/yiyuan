<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3F3F3">

    <RelativeLayout
        android:id="@+id/title_regisiter"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_bar_bg_white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/return_regisiter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:padding="10dp"
            android:src="@drawable/button_left_arrow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="注册"
            android:textColor="#555555"
            android:textSize="20sp"/>
    </RelativeLayout>

    <com.team.azusa.yiyuan.widget.ClearEditText
        android:id="@+id/regisiter_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/title_regisiter"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/login_layoutshape"
        android:hint="请输入您的手机号"
        android:inputType="number"
        android:padding="10dp"
        android:singleLine="true"
        android:textColorHint="#cccccc"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/regisiter_ensure"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/regisiter_edit"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_envy"
        android:text="下一步"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/regisiter_ensure"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/cb_newpass"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@drawable/choose_small_sel"
            android:button="@null"
            android:checked="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="我已阅读并同意《"
            android:textColor="#a4a4a4"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/regisiter_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="1元云购服务协议"
            android:textColor="@color/product_winner_color_sel"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="》"
            android:textColor="#a4a4a4"
            android:textSize="13sp"/>
    </LinearLayout>
</RelativeLayout>
