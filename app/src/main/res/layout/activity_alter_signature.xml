<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/setting_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
  <RelativeLayout
      android:id="@+id/signature_title"
      android:layout_width="fill_parent"
      android:layout_height="50dp"
      android:background="@drawable/title_bar_bg_white"
      android:orientation="horizontal">

    <ImageView
        android:id="@+id/signature_return"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:padding="10dp"
        android:src="@drawable/button_left_arrow"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="修改签名"
        android:textColor="#555555"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/signature_finsh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:padding="12dp"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:text="保存"
        android:textColor="#FF7F24" />

  </RelativeLayout>
  <EditText
      android:textSize="@dimen/edittext_text"
      android:textColor="@color/black_text"
      android:textColorHint="@color/tips_text"
      android:gravity="top|left|center"
      android:id="@+id/et_signature"
      android:background="@drawable/layout_radius_all_white_stroke_gray"
      android:padding="8.0dip"
      android:layout_width="fill_parent"
      android:layout_height="200.0dip"
      android:layout_marginLeft="@dimen/frame_margin_horizontal"
      android:layout_marginTop="@dimen/padding_xlarge"
      android:layout_marginRight="@dimen/frame_margin_horizontal"
      android:singleLine="false"
      android:maxLength="200"
      android:layout_below="@id/signature_title"
      android:inputType="textMultiLine" />
</RelativeLayout>