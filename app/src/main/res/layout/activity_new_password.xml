<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3F3F3">

    <RelativeLayout
        android:id="@+id/title_newpassword"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_bar_bg_white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/return_newpassword"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:padding="10dp"
            android:src="@drawable/button_left_arrow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="设置密码"
            android:textColor="#555555"
            android:textSize="20sp"/>
    </RelativeLayout>

    <com.team.azusa.yiyuan.widget.ClearEditText
        android:id="@+id/newpass_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/title_newpassword"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/login_layoutshape"
        android:hint="设置8~20位由字母,数组或符号两种或以上组成的密码"
        android:inputType="textPassword"
        android:maxLength="20"
        android:padding="10dp"
        android:singleLine="true"
        android:textColorHint="#cccccc"
        android:textSize="13sp"/>

    <CheckBox
        android:id="@+id/cb_newpass"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_below="@id/newpass_edit"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/choose_small_sel"
        android:button="@null"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/newpass_edit"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/cb_newpass"
        android:text="显示密码"
        android:textColor="#a4a4a4"/>

    <Button
        android:id="@+id/newpass_ensuer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/cb_newpass"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_envy"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/newpass_ensuer"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="密码由8~20位由字母,数组或符号两种或以上组成的密码"
        android:textColor="#b4b4b4"
        android:textSize="13sp"/>

</RelativeLayout>
