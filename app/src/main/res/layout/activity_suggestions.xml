<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/title_suggestion"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_bar_bg_white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/return_suggestion"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:padding="10dp"
            android:src="@drawable/button_left_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="意见反馈"
            android:textColor="#555555"
            android:textSize="20sp" />
    </RelativeLayout>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_below="@id/title_suggestion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:animationCache="true"
        android:background="@drawable/spinner_sel"
        android:drawSelectorOnTop="true"
        android:entries="@array/spingarr" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_below="@id/spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_address_shape"
        android:hint="请输入联系方式"
        android:paddingLeft="10dp"
        android:textColor="#555555"
        android:textColorHint="#dcdcdc"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_suggestion_detial"
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:layout_below="@id/et_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_address_shape"
        android:gravity="left|top"
        android:hint="有意见?说两句!"
        android:padding="10dp"
        android:textColor="#555555"
        android:textColorHint="#dcdcdc"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/mobile_text"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_suggestion_detial"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_address_shape"
        android:lineSpacingExtra="10dp"
        android:padding="10dp"
        android:textIsSelectable="true"
        android:textSize="14sp" />

    <Button
        android:id="@+id/bt_suggestion"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_below="@id/mobile_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_envy"
        android:text="确认"
        android:textColor="#ffffff"
        android:textSize="18sp" />


</RelativeLayout>
