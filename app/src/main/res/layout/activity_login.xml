<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#99eeeeee"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_goodsdetail"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_bar_bg_white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/return_login"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:padding="10dp"
            android:src="@drawable/button_left_arrow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="登录"
            android:textColor="#555555"
            android:textSize="20sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_layoutshape">

        <com.team.azusa.yiyuan.widget.ClearEditText
            android:id="@+id/username"
            style="@style/edit_username"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:inputType="text"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerInParent="true"
            android:background="#cccccc"/>

        <com.team.azusa.yiyuan.widget.ClearEditText
            android:id="@+id/password"
            style="@style/edit_password"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_below="@id/username"
            android:inputType="textPassword"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/but_login"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/button_envy"
            android:text="登 录"
            android:textColor="#ffffff"
            android:textSize="18sp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="32dp">

        <View
            android:id="@+id/viewfgxlogin"
            android:layout_width="0.5dp"
            android:layout_height="16dp"
            android:layout_centerInParent="true"
            android:background="#cccccc"/>

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/viewfgxlogin"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:text="新用户注册"
            android:textColor="#bbbbbb"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/viewfgxlogin"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:padding="5dp"
            android:text="忘记密码?"
            android:textColor="#bbbbbb"
            android:textSize="16sp"/>

    </RelativeLayout>

</LinearLayout>