<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3F3F3">

    <RelativeLayout
        android:id="@+id/title_forgetPassword"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_bar_bg_white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/return_forgetPassword"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:padding="10dp"
            android:src="@drawable/button_left_arrow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="找回密码"
            android:textColor="#555555"
            android:textSize="20sp"/>
    </RelativeLayout>

    <com.team.azusa.yiyuan.widget.ClearEditText
        android:id="@+id/forgetPassword_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/title_forgetPassword"
        android:layout_margin="16dp"
        android:background="@drawable/login_layoutshape"
        android:hint="请输入您注册的手机号"
        android:inputType="number"
        android:padding="10dp"
        android:singleLine="true"
        android:textColorHint="#cccccc"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/forgetPassword_ensure"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/forgetPassword_edit"
        android:layout_margin="16dp"
        android:background="@drawable/button_envy"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="16sp"/>
</RelativeLayout>
