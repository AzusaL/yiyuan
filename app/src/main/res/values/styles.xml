<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="edit_username">
        <item name="android:background">@null</item>
        <item name="android:drawableLeft">@drawable/login_name</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableRight">@drawable/delete</item>
        <item name="android:hint">@string/please_input_username</item>
        <item name="android:textColorHint">#cccccc</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="edit_password">
        <item name="android:background">@null</item>
        <item name="android:drawableLeft">@drawable/login_password</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawableRight">@drawable/delete</item>
        <item name="android:hint">"请输入您的密码"</item>
        <item name="android:textColorHint">#cccccc</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="edit_search">
        <item name="android:background">@drawable/search_bg_stroke</item>
        <item name="android:drawableLeft">@drawable/search</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:drawableRight">@drawable/clear_normal</item>
        <item name="android:hint">"搜索"iPhone"试试"</item>
        <item name="android:textColorHint">#cccccc</item>
        <item name="android:textColor">#777777</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MYProgressBarStyle">
        <item name="android:indeterminateDrawable">@drawable/loding_pb</item>
    </style>

    <style name="MYProgressBarStyle2">
        <item name="android:indeterminateDrawable">@drawable/progressbar_img</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">25sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
        <!-- 指定消失的动画xml -->
    </style>
    <style name="DialogShowFromButtom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/out_to_bottom</item>
    </style>

</resources>
